%h1
  会員の詳細

%p
  = link_to "編集", edit_member_path(@member.id)

%table.attr
  %tr
    %th{ width: "150" }
      背番号
    %td
      = @member.number

  %tr
    %th
      ユーザー名
    %td
      = @member.name

  %tr
    %th
      氏名
    %td
      = @member.full_name

  %tr
    %th
      性別
    %td
      -# 0ならば男と表示、それ以外なら女と表示
      = @member.gender == 0 ? "男" : "女"

  %tr
    %th
      誕生日
    %td
      = @member.birthday.try(:strftime, "%Y年%m月%d日")

  %tr
    %th
      メールアドレス
    %td
      = @member.email

  %tr
    %th
      管理者
    %td
      -# adminstratorがtrueなら◯、それ以外なら-を表示
      = @member.administrator? ? "◯" : "-"
